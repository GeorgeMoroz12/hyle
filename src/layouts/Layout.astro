---
// src/layouts/Layout.astro
import '../styles/global.css';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';

interface Props {
	title: string;
	description?: string;
    image?: string; // OG Image URL (absolute or relative)
    hideHeader?: boolean;
}

const { 
    title, 
    description = "Авторская керамика ручной работы. Эстетика минимализма и природных текстур.",
    image = "/default-og.jpg", // Fallback image
    hideHeader = false 
} = Astro.props;

// Формируем абсолютные URL для мета-тегов (важно для соцсетей)
// Astro.site должен быть настроен в astro.config.mjs, иначе new URL(..., Astro.site) может упасть, 
// поэтому добавим безопасную проверку или будем считать, что site настроен.
// Для надежности используем Astro.url.origin если Astro.site не задан, но в SSG Astro.site обязателен.
// Предполагаем, что Astro.site задан.
const siteUrl = Astro.site || new URL('https://hyle-ceramics.com'); // Fallback domain
const socialImageURL = new URL(image, siteUrl).href;
const canonicalURL = new URL(Astro.url.pathname, siteUrl).href;
---

<!doctype html>
<html lang="ru">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width" />
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		
        <!-- Fonts -->
        <link rel="preconnect" href="https://fonts.googleapis.com">
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
        <link href="https://fonts.googleapis.com/css2?family=Caveat:wght@400..700&family=Inter:wght@300;400;500&family=Playfair+Display:ital,wght@0,400;0,600;1,400&display=swap" rel="stylesheet">

        <!-- SEO / Meta Tags -->
		<title>{title} | Hyle Ceramics</title>
		<meta name="description" content={description} />
        <link rel="canonical" href={canonicalURL} />

        <!-- Open Graph / Facebook -->
        <meta property="og:type" content="website" />
        <meta property="og:url" content={canonicalURL} />
        <meta property="og:title" content={title} />
        <meta property="og:description" content={description} />
        <meta property="og:image" content={socialImageURL} />

        <!-- Twitter -->
        <meta property="twitter:card" content="summary_large_image" />
        <meta property="twitter:url" content={canonicalURL} />
        <meta property="twitter:title" content={title} />
        <meta property="twitter:description" content={description} />
        <meta property="twitter:image" content={socialImageURL} />
	</head>
	<body class="flex flex-col min-h-screen antialiased selection:bg-hyle-clay/20 selection:text-hyle-text">
		
        {!hideHeader && <Header />}
		
        <main class="flex-grow w-full">
			<slot />
		</main>

        {!hideHeader && <Footer />}
	</body>
</html>