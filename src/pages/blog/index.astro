---
// src/pages/blog/index.astro
import Layout from '../../layouts/Layout.astro';
import { getCollection } from 'astro:content';

let posts = [];
let tagMap = {};

try {
    const rawPosts = await getCollection('blog');
    const allTags = await getCollection('tags');
    // @ts-ignore
    tagMap = allTags.reduce((acc, t) => { acc[t.id] = t.data.title; return acc; }, {});

    if (Array.isArray(rawPosts)) {
        const validPosts = rawPosts.filter(p => p && p.data && p.data.title);
        posts = validPosts.sort((a, b) => {
            const dateA = a.data.publishedDate ? new Date(a.data.publishedDate).valueOf() : 0;
            const dateB = b.data.publishedDate ? new Date(b.data.publishedDate).valueOf() : 0;
            return dateB - dateA;
        });
    }
} catch (e) {
    console.warn('⚠️ Blog fetch error', e);
}

const resolveImg = (img) => {
    if (typeof img === 'string') return img;
    if (typeof img === 'object' && img?.src) return img.src;
    return null;
}
---

<Layout title="Журнал" description="Заметки о керамике.">
  <div class="min-h-screen pt-28 pb-20 bg-hyle-bg transition-colors duration-500 overflow-x-hidden">
    <div class="container-main w-full min-w-0 max-w-[var(--spacing-container)]">
        <div class="flex flex-col items-center text-center gap-6 mb-16 animate-appear">
            <h1 class="font-serif text-5xl md:text-7xl text-hyle-text leading-[0.9]">Дневник</h1>
            <div class="w-12 h-px bg-hyle-text/10"></div>
            <p class="text-hyle-text/60 font-light max-w-md mt-2 text-sm md:text-base">Заметки о процессе, обжигах и философии быта.</p>
        </div>

        <!-- 
            FIX: grid-cols-1 для мобилок. w-full для статьи.
        -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8 gap-y-16 w-full min-w-0">
            {posts.length === 0 ? (
                <div class="col-span-full py-20 text-center">
                    <p class="font-serif text-2xl text-hyle-text/40 mb-2">Тишина в эфире</p>
                </div>
            ) : (
                posts.map((post, idx) => {
                    const dateStr = post.data.publishedDate ? new Date(post.data.publishedDate).toLocaleDateString('ru-RU') : '';
                    const coverImage = resolveImg(post.data.coverImage);
                    const tagId = (Array.isArray(post.data.tags) && post.data.tags.length > 0) ? post.data.tags[0] : null;
                    // @ts-ignore
                    const tagName = tagId ? (tagMap[tagId] || tagId) : null;

                    return (
                        <article class="group flex flex-col items-start gap-4 w-full min-w-0 max-w-full animate-appear overflow-hidden" style={`animation-delay: ${idx * 100}ms`}>
                            {coverImage && (
                                <a href={`/blog/${post.slug}`} class="w-full aspect-[16/9] overflow-hidden rounded-sm bg-hyle-surface mb-2 block relative shadow-sm hover:shadow-md transition-all">
                                    <img 
                                        src={coverImage} 
                                        alt={post.data.title} 
                                        class="w-full h-full object-cover transition-transform duration-700 group-hover:scale-105" 
                                        loading="lazy" 
                                        onerror="this.style.display='none'"
                                    />
                                    {tagName && <span class="absolute top-3 right-3 bg-white/90 px-3 py-1 text-[10px] lowercase tracking-wide font-mono text-hyle-text/60 rounded-full">#{tagName.toLowerCase()}</span>}
                                </a>
                            )}
                            
                            <div class="flex items-center gap-3 w-full text-[10px] font-mono uppercase tracking-widest text-hyle-text/40 mb-1">
                                <span>{dateStr}</span>
                            </div>

                            <a href={`/blog/${post.slug}`} class="block group-hover:opacity-70 transition-opacity w-full">
                                <h2 class="font-serif text-2xl md:text-3xl text-hyle-text leading-tight mb-3 group-hover:text-hyle-clay transition-colors break-words">{post.data.title}</h2>
                                <p class="font-sans font-light text-sm text-hyle-text/60 leading-relaxed line-clamp-3">{post.data.excerpt || ''}</p>
                            </a>
                            
                            <a href={`/blog/${post.slug}`} class="mt-2 font-mono text-[10px] uppercase tracking-widest border-b border-transparent group-hover:border-hyle-clay hover:text-hyle-clay transition-all">Читать далее</a>
                        </article>
                    );
                })
            )}
        </div>
    </div>
  </div>
</Layout>