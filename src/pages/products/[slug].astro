---
// src/pages/products/[slug].astro
import { getCollection, getEntry, getEntries } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ExpandableText from '../../components/ExpandableText.astro';
import OrderButton from '../../components/OrderButton.astro';
import ProductCard from '../../components/ProductCard.astro';

export async function getStaticPaths() {
  const products = await getCollection('products');
  return products.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { title, price, images, specs, status, masterNote, care_instructions, category, tags } = entry.data;
const { Content } = await entry.render();

const resolveId = (item: any) => {
    if (!item) return null;
    if (typeof item === 'string') return item;
    if (typeof item === 'object' && item.id) return item.id;
    return null;
};

// --- DATA LOGIC ---
const currentCategoryId = resolveId(category);
let categoryTitle = 'Каталог';
if (currentCategoryId) {
    try {
        const catEntry = await getEntry('categories', currentCategoryId);
        if (catEntry) categoryTitle = catEntry.data.title; 
    } catch (e) { categoryTitle = currentCategoryId; }
}

const rawTags = Array.isArray(tags) ? tags : [];
const tagIdsToLoad = rawTags.map(resolveId).filter(id => id !== null);
let displayTags = [];
if (tagIdsToLoad.length > 0) {
    try {
        const tagRefs = tagIdsToLoad.map(id => ({ collection: 'tags', id }));
        const loadedTags = await getEntries(tagRefs);
        displayTags = loadedTags.map(t => ({ id: t.id, title: t.data.title }));
    } catch (e) {
        displayTags = tagIdsToLoad.map(id => ({ id, title: id }));
    }
}

const allProducts = await getCollection('products');
const relatedProducts = allProducts.filter(p => {
    if (p.id === entry.id) return false;
    const pCatId = resolveId(p.data.category);
    if (!currentCategoryId || !pCatId) return false;
    return pCatId === currentCategoryId;
}).slice(0, 8);

let relatedItems = relatedProducts;
if (relatedItems.length < 4) {
    const leftovers = allProducts
        .filter(p => p.id !== entry.id && !relatedItems.some(r => r.id === p.id))
        .slice(0, 6 - relatedItems.length);
    relatedItems = [...relatedItems, ...leftovers];
}

const allCategories = await getCollection('categories');
const categoryMap = allCategories.reduce((acc, cat) => {
    acc[cat.id] = cat.data.title;
    return acc;
}, {} as Record<string, string>);

const formattedPrice = price > 0 ? `${price.toLocaleString('ru-RU')} ₽` : 'Цена по запросу';
const s = status?.toLowerCase() || '';
const isSoldOut = s === 'sold' || s === 'продано';
const mainImage = images && images.length > 0 ? images[0] : '/placeholder.jpg';
const noteText = masterNote || "Особенность этой серии — в несовершенстве формы. Следы пальцев оставлены намеренно.";
const currentUrl = Astro.url.href;

const specMap: Record<string, string> = {
    'size': 'Размер', 'volume': 'Объем', 'material': 'Материал',
    'weight': 'Вес', 'color': 'Цвет', 'technique': 'Техника'
};
---

<Layout title={title} hideHeader={true}>
  
  <div class="min-h-screen w-full overflow-hidden flex flex-col lg:flex-row bg-hyle-bg transition-colors duration-500">
    
    <!-- LEFT: PRODUCT STAGE -->
    <div class="relative w-full lg:w-[70%] h-[70vh] lg:h-screen lg:sticky lg:top-0 bg-hyle-stone/10 flex flex-col justify-center overflow-hidden pt-32 lg:pt-20 pb-10">
        
        <!-- LOGO -->
        <a href="/" class="absolute top-6 left-6 lg:top-8 lg:left-8 z-30 font-serif text-xl lg:text-2xl tracking-wide text-hyle-text opacity-90 hover:opacity-100 transition-opacity">
            Hyle.
        </a>
        
        <!-- BREADCRUMBS -->
        <div class="absolute top-14 left-6 lg:top-8 lg:left-32 z-20 flex items-center gap-2 pt-1 font-hand text-lg lg:text-2xl text-hyle-text/50">
             <a href="/catalog" class="hover:text-hyle-clay transition-colors">Каталог</a>
             {categoryTitle && (
                <>
                    <span class="text-hyle-text/30">/</span>
                    <a href={`/catalog?categories=${currentCategoryId}`} class="text-hyle-clay -rotate-1 hover:text-hyle-text transition-colors">
                        {categoryTitle}
                    </a>
                </>
             )}
        </div>

        <!-- 
           MAIN IMAGE CONTAINER 
           - touch-none: Отключает скролл страницы на этом блоке (важно для зума!)
           - overflow-hidden: Чтобы зум не вылезал за рамки
        -->
        <div 
            id="zoom-wrapper"
            class="hidden lg:flex relative w-full h-full max-w-5xl max-h-[85vh] items-center justify-center cursor-zoom-in group overflow-hidden touch-none"
        >
             <img 
                src={mainImage} 
                alt={title} 
                id="main-product-image" 
                class="max-w-full max-h-full object-contain transition-transform duration-300 ease-out origin-center drop-shadow-xl will-change-transform" 
            />
        </div>

        <!-- MOBILE INTERACTIVE GALLERY -->
        <!-- Для мобилок используем свой контейнер с логикой Pinch -->
        <div 
            id="mobile-gallery"
            class="lg:hidden w-full h-full flex items-center justify-center relative touch-none overflow-hidden"
        >
            <div id="mobile-zoom-container" class="w-full h-full flex items-center justify-center transition-transform duration-200 ease-out will-change-transform">
                <img 
                    src={mainImage} 
                    alt={title} 
                    id="mobile-product-image"
                    class="max-w-full max-h-full object-contain drop-shadow-lg pointer-events-none select-none" 
                />
            </div>
            
            <!-- Hint -->
            <div id="zoom-hint" class="absolute bottom-4 left-1/2 -translate-x-1/2 bg-black/10 backdrop-blur-sm px-3 py-1 text-[9px] uppercase tracking-widest text-hyle-text/60 rounded-full pointer-events-none transition-opacity duration-500">
                Tap to zoom
            </div>
        </div>

        <!-- Desktop Thumbnails -->
        {images && images.length > 1 && (
            <div class="hidden lg:flex absolute bottom-10 left-1/2 -translate-x-1/2 gap-4 p-3 bg-white/60 backdrop-blur-md rounded-full border border-white/40 shadow-sm z-30">
                {images.map((img) => (
                    <button 
                        class="w-12 h-12 rounded-full overflow-hidden border-2 border-transparent hover:border-hyle-clay transition-all thumb-btn" 
                        data-src={img}
                    >
                        <img src={img} class="w-full h-full object-cover" />
                    </button>
                ))}
            </div>
        )}
    </div>

    <!-- RIGHT: SIDEBAR -->
    <div class="w-full lg:w-[30%] min-h-[50vh] bg-hyle-surface border-l border-hyle-text/5 flex flex-col relative z-10 backdrop-blur-xl shadow-2xl shadow-hyle-text/5">
        
        <div class="flex-1 p-6 lg:p-12 flex flex-col gap-6 lg:gap-8">
            
            <div class="mt-0 lg:mt-4">
                <div class="flex justify-between items-start mb-2">
                    <div class="flex-1 pr-4">
                        <ExpandableText maxHeight="80px" gradientFrom="from-hyle-surface">
                            <h1 class="font-serif text-3xl lg:text-5xl text-hyle-text leading-[1.1] break-words hyphens-auto">{title}</h1>
                        </ExpandableText>
                    </div>
                    {isSoldOut && <span class="text-[10px] border border-hyle-text/20 px-2 py-1 uppercase tracking-widest opacity-50 mt-1 shrink-0">Архив</span>}
                </div>
                
                <div class="flex flex-col gap-2 mt-4 lg:mt-6 border-b border-hyle-text/5 pb-6">
                    <span class="font-hand text-3xl md:text-4xl lg:text-5xl text-hyle-clay -rotate-2 inline-block origin-left">{formattedPrice}</span>
                    {!isSoldOut && status !== 'В наличии' && (
                        <span class="text-xs text-hyle-text/40 uppercase tracking-widest mt-1">{status}</span>
                    )}
                    
                    {displayTags.length > 0 && (
                        <div class="flex flex-wrap gap-3 mt-2">
                            {displayTags.map((tag) => (
                                <a href={`/catalog?tag=${tag.id}`} class="text-base lg:text-lg font-hand text-hyle-text/50 hover:text-hyle-clay transition-colors -rotate-2 hover:rotate-0">
                                    #{tag.title}
                                </a>
                            ))}
                        </div>
                    )}
                </div>
            </div>

            <div class="bg-hyle-text/5 p-5 lg:p-6 rounded-sm -rotate-1 shadow-sm border border-hyle-text/5 relative mx-1">
                 <div class="absolute -top-3 left-1/2 w-3 h-3 rounded-full bg-hyle-text/10 shadow-inner"></div>
                 <ExpandableText maxHeight="120px" gradientFrom="from-hyle-surface">
                    <p class="font-hand text-xl lg:text-2xl text-hyle-text/80 leading-snug">"{noteText}"</p>
                 </ExpandableText>
            </div>

            <ExpandableText maxHeight="140px" gradientFrom="from-hyle-surface">
                <div class="prose prose-stone prose-sm prose-p:text-hyle-text/80 leading-relaxed font-light">
                    <Content />
                </div>
            </ExpandableText>

            <div class="border-t border-hyle-text/10 pt-4 lg:pt-6">
                {specs && (
                    <dl class="text-xs grid grid-cols-2 gap-y-3 opacity-70 mb-4">
                        {Object.entries(specs).map(([key, value]) => (
                            <>
                                <dt class="font-medium uppercase tracking-wider text-hyle-text/60">
                                    {specMap[key.toLowerCase()] || key}
                                </dt>
                                <dd className="text-hyle-text">{value}</dd>
                            </>
                        ))}
                    </dl>
                )}
                {care_instructions && (
                    <details class="group cursor-pointer border-t border-hyle-text/10 pt-3">
                        <summary class="flex justify-between items-center list-none outline-none text-hyle-text/60 hover:text-hyle-clay transition-colors">
                            <span class="text-xs font-medium uppercase tracking-wider">Уход за изделием</span>
                            <span class="font-hand text-xl group-open:rotate-180 transition-transform duration-300">↓</span>
                        </summary>
                        <div class="mt-3 text-sm font-light text-hyle-text/80 leading-relaxed animate-appear">{care_instructions}</div>
                    </details>
                )}
            </div>

            <div class="mt-2">
                 {isSoldOut ? (
                    <button disabled class="w-full py-4 bg-hyle-text/10 text-hyle-text/40 font-serif italic cursor-not-allowed text-center text-xs uppercase tracking-widest">Изделие нашло свой дом</button>
                ) : (
                    <OrderButton productName={title} price={price} url={currentUrl} />
                )}
            </div>

            <div class="mt-8 lg:mt-auto pt-8 border-t border-hyle-text/5 pb-8 lg:pb-0">
                <div class="flex justify-between items-baseline mb-4">
                    <h3 class="font-hand text-xl lg:text-2xl text-hyle-text/60">Вам может понравиться:</h3>
                    <span class="text-[9px] uppercase tracking-widest text-hyle-text/30 hidden sm:block animate-pulse">Листайте →</span>
                </div>
                <div id="related-slider" class="flex gap-5 overflow-x-auto pb-6 snap-x snap-mandatory scrollbar-hide select-none scroll-smooth">
                    {relatedItems.map((item) => {
                         const cId = resolveId(item.data.category);
                         return (
                            <div class="shrink-0 w-44 md:w-52 snap-start pointer-events-auto">
                                <ProductCard product={item} categoryName={cId ? categoryMap[cId] : ''} />
                            </div>
                        );
                    })}
                </div>
            </div>
        </div>
    </div>
  </div>
</Layout>

<script>
    // --- 1. DESKTOP HOVER ZOOM ---
    const container = document.querySelector('.zoom-container');
    const img = document.getElementById('main-product-image');

    if (container && img) {
        container.addEventListener('mousemove', (e) => {
            if (window.matchMedia("(min-width: 1024px)").matches) {
                // @ts-ignore
                const rect = container.getBoundingClientRect();
                // @ts-ignore
                const x = ((e.clientX - rect.left) / rect.width) * 100;
                // @ts-ignore
                const y = ((e.clientY - rect.top) / rect.height) * 100;
                
                img.style.transformOrigin = `${x}% ${y}%`;
                img.style.transform = 'scale(1.5)';
            }
        });
        container.addEventListener('mouseleave', () => {
            if (window.matchMedia("(min-width: 1024px)").matches) {
                img.style.transform = 'scale(1)';
                setTimeout(() => { img.style.transformOrigin = 'center center'; }, 300);
            }
        });
    }

    // --- 2. MOBILE PINCH & PAN ZOOM ---
    const mobileContainer = document.getElementById('mobile-gallery');
    const mobileTarget = document.getElementById('mobile-zoom-container');
    const hint = document.getElementById('zoom-hint');
    
    let currentScale = 1;
    let startDistance = 0;
    let isPinching = false;
    
    // Pan variables
    let startX = 0, startY = 0;
    let translateX = 0, translateY = 0;
    let lastTranslateX = 0, lastTranslateY = 0;

    if (mobileContainer && mobileTarget) {
        
        mobileContainer.addEventListener('touchstart', (e) => {
            // Если 2 пальца - это PINCH
            if (e.touches.length === 2) {
                isPinching = true;
                startDistance = Math.hypot(
                    e.touches[0].clientX - e.touches[1].clientX,
                    e.touches[0].clientY - e.touches[1].clientY
                );
                if (hint) hint.style.opacity = '0';
            } 
            // Если 1 палец - это PAN (только если уже есть зум)
            else if (e.touches.length === 1 && currentScale > 1) {
                isPinching = false;
                startX = e.touches[0].clientX;
                startY = e.touches[0].clientY;
            }
            // TAP Detection (handled by touchend logic usually, but simplified here)
        }, { passive: false });

        mobileContainer.addEventListener('touchmove', (e) => {
            // PINCH Logic
            if (isPinching && e.touches.length === 2) {
                e.preventDefault(); // Блокируем скролл страницы
                const newDistance = Math.hypot(
                    e.touches[0].clientX - e.touches[1].clientX,
                    e.touches[0].clientY - e.touches[1].clientY
                );
                
                const delta = newDistance / startDistance;
                // Ограничиваем зум от 1 до 3
                let newScale = Math.min(Math.max(1, currentScale * delta), 3);
                
                // Применяем зум
                mobileTarget.style.transform = `translate(${lastTranslateX}px, ${lastTranslateY}px) scale(${newScale})`;
                
                // Обновляем для следующего кадра (но не сохраняем в currentScale пока палец не отпущен, это сложнее, 
                // упрощенный вариант: просто применяем CSS, а реальное обновление в touchend)
                // Для плавности лучше обновлять сразу, но осторожно.
                // В этом упрощенном коде мы просто меняем стиль, а currentScale обновим позже, 
                // но для непрерывности лучше пересчитывать startDistance.
                // Упростим:
                currentScale = newScale;
                startDistance = newDistance; // Сброс базы для следующего микродвижения
            }
            // PAN Logic
            else if (!isPinching && e.touches.length === 1 && currentScale > 1) {
                e.preventDefault(); // Блокируем скролл страницы
                const x = e.touches[0].clientX;
                const y = e.touches[0].clientY;
                
                const moveX = x - startX;
                const moveY = y - startY;
                
                translateX = lastTranslateX + moveX;
                translateY = lastTranslateY + moveY;
                
                mobileTarget.style.transform = `translate(${translateX}px, ${translateY}px) scale(${currentScale})`;
            }
        }, { passive: false });

        mobileContainer.addEventListener('touchend', (e) => {
            if (e.touches.length === 0) {
                // Если отпустили все пальцы
                if (currentScale > 1) {
                    // Сохраняем позицию пана
                    lastTranslateX = translateX;
                    lastTranslateY = translateY;
                } else {
                    // Если масштаб вернулся к 1, сбрасываем позицию
                    lastTranslateX = 0;
                    lastTranslateY = 0;
                    translateX = 0;
                    translateY = 0;
                    mobileTarget.style.transform = `scale(1)`;
                    currentScale = 1;
                    if (hint) hint.style.opacity = '1';
                }
            }
        });

        // 1-Tap Toggle (Simple)
        let lastTap = 0;
        mobileContainer.addEventListener('click', (e) => {
            const now = Date.now();
            if (now - lastTap < 300) {
                // Double Tap (опционально, но мы делаем Single Tap toggle для простоты)
            } else {
                // Single Tap Toggle
                if (!isPinching && Math.abs(translateX - lastTranslateX) < 5) { // Проверка, что это не был свайп
                    if (currentScale > 1.2) {
                        // Reset
                        currentScale = 1;
                        lastTranslateX = 0; lastTranslateY = 0; translateX = 0; translateY = 0;
                        mobileTarget.style.transform = `scale(1)`;
                        if (hint) hint.style.opacity = '1';
                    } else {
                        // Zoom in slightly
                        currentScale = 1.5;
                        mobileTarget.style.transform = `scale(1.5)`;
                        if (hint) hint.style.opacity = '0';
                    }
                }
            }
            lastTap = now;
        });
    }

    // --- OTHER SCRIPTS ---
    const thumbs = document.querySelectorAll('.thumb-btn');
    thumbs.forEach(btn => {
        btn.addEventListener('click', () => {
            const src = btn.getAttribute('data-src');
            // @ts-ignore
            if (img && src) img.src = src;
            // @ts-ignore
            if (mobileTarget && src) mobileTarget.querySelector('img').src = src;
            thumbs.forEach(t => t.classList.remove('border-hyle-clay'));
            btn.classList.add('border-hyle-clay');
        });
    });

    const slider = document.getElementById('related-slider');
    if (slider) {
        slider.addEventListener('wheel', (e) => {
            if (window.matchMedia("(min-width: 1024px)").matches && slider.scrollWidth > slider.clientWidth) {
                e.preventDefault();
                slider.scrollLeft += e.deltaY;
            }
        }, { passive: false });
    }
</script>