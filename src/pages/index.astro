---
// src/pages/index.astro
import Layout from '../layouts/Layout.astro';
import ProductCard from '../components/ProductCard.astro';
import { getCollection } from 'astro:content';

const HERO_IMAGE = "/images/hero-minimal.jpg";       
const WORKSHOP_IMAGE = "/images/workshop-process.jpg"; 

const allProducts = await getCollection('products');
const recentProducts = allProducts.slice(0, 8); // Берем побольше для скролла

const allCategories = await getCollection('categories');
const categoryMap = allCategories.reduce((acc, cat) => {
    acc[cat.id] = cat.data.title;
    return acc;
}, {} as Record<string, string>);
---

<Layout title="Главная" hideHeader={true}>
  
  <!-- HEADER -->
  <nav class="absolute top-0 left-0 w-full z-50 px-6 py-8 md:px-12 flex justify-between items-start">
      <a href="/" class="relative z-50 group flex flex-col gap-1">
          <span class="font-serif text-4xl md:text-5xl leading-none text-hyle-text group-hover:text-hyle-clay transition-colors block">Hyle.</span>
          <span class="font-sans text-[10px] uppercase tracking-[0.3em] text-hyle-text/50 group-hover:text-hyle-clay/80 transition-colors pl-1">
              керамика ручной работы
          </span>
      </a>
      
      <div class="hidden md:flex gap-12 font-mono text-[11px] tracking-[0.2em] text-hyle-text/80 uppercase pt-3 mix-blend-multiply">
          <a href="/catalog" class="hover:text-hyle-clay transition-colors">Каталог</a>
          <a href="/about" class="hover:text-hyle-clay transition-colors">Мастерская</a>
          <a href="/blog" class="hover:text-hyle-clay transition-colors">Журнал</a>
      </div>

      <button class="md:hidden text-hyle-text pt-2">
          <span class="font-mono text-xs uppercase border-b border-hyle-text">Меню</span>
      </button>
  </nav>

  <!-- PARALLAX BLOBS (Background) -->
  <div class="fixed inset-0 pointer-events-none z-0 overflow-hidden opacity-50">
      <div class="parallax-element absolute top-[10%] right-[-5%] w-[40vw] h-[40vw] bg-hyle-clay/5 rounded-full blur-[100px]" data-speed="0.05"></div>
      <div class="parallax-element absolute top-[60%] left-[-10%] w-[50vw] h-[50vw] bg-hyle-stone/30 rounded-full blur-[120px]" data-speed="-0.08"></div>
  </div>

  <!-- HERO SECTION -->
  <section class="relative min-h-screen w-full flex flex-col justify-center pt-24 pb-12 overflow-hidden">
    
    <div class="container-main relative z-10 grid grid-cols-1 lg:grid-cols-12 gap-8 items-center h-full">
        
        <!-- TEXT -->
        <div class="lg:col-span-5 relative z-20 order-2 lg:order-1 mt-8 lg:mt-0">
            <div class="animate-appear">
                <span class="font-hand text-3xl text-hyle-clay block mb-2 -rotate-2 ml-2">Тепло земли</span>
                
                <h1 class="font-serif text-6xl md:text-8xl lg:text-[8.5rem] leading-[0.85] text-hyle-text mb-10 tracking-tight mix-blend-darken">
                    Глина <br/>
                    <span class="italic font-light ml-16 text-hyle-clay/90 relative inline-block">
                        дышит
                        <span class="absolute bottom-2 left-0 w-full h-px bg-hyle-clay/40"></span>
                    </span>
                </h1>

                <p class="font-sans font-light text-sm md:text-base text-hyle-text/70 max-w-xs leading-relaxed mb-12 ml-2 pl-6 border-l border-hyle-text/10">
                    Неидеальная форма, живая фактура. <br/>
                    Вещи, созданные для медленной жизни.
                </p>

                <div class="ml-2 flex items-center gap-6">
                    <a href="/catalog" class="group relative px-8 py-4 bg-hyle-text text-[#F9F8F6] overflow-hidden rounded-sm transition-all hover:rounded-xl duration-500">
                        <span class="relative z-10 font-mono text-xs uppercase tracking-widest group-hover:text-hyle-clay transition-colors">В каталог</span>
                        <div class="absolute inset-0 bg-[#2C2B29] group-hover:bg-[#F9F8F6] transition-colors duration-500 border border-hyle-text"></div>
                    </a>
                </div>
            </div>
        </div>

        <!-- IMAGE -->
        <div class="lg:col-span-7 relative order-1 lg:order-2 h-[50vh] lg:h-auto">
            <div class="relative w-full aspect-[4/5] lg:aspect-[3/4] lg:w-[85%] lg:ml-auto">
                <div class="absolute inset-0 overflow-hidden rounded-sm shadow-2xl shadow-hyle-clay/5 transform rotate-1 hover:rotate-0 transition-transform duration-1000 ease-out">
                    <img 
                        id="hero-img-parallax"
                        src={HERO_IMAGE} 
                        alt="Ceramic Atmosphere" 
                        class="w-full h-full object-cover scale-110"
                        onerror="this.src='https://images.unsplash.com/photo-1595180665183-c21d0a519894?q=80&w=1600&auto=format&fit=crop'"
                    />
                    <div class="absolute inset-0 bg-noise opacity-20 mix-blend-overlay pointer-events-none"></div>
                </div>
            </div>
        </div>

    </div>
  </section>

  <!-- SECTION 2: HORIZONTAL SCROLL SHOWCASE (Interactive) -->
  <section class="py-24 md:py-40 relative z-20 bg-gradient-to-b from-transparent to-white/80">
    <div class="container-main">
        
        <div class="flex flex-col md:flex-row justify-between items-end mb-12 px-2">
            <div>
                <span class="font-mono text-[10px] uppercase text-hyle-text/40 mb-2 block">01 / Collection</span>
                <h2 class="font-serif text-4xl md:text-6xl text-hyle-text">Свежий обжиг</h2>
            </div>
            
            <div class="hidden md:flex items-center gap-3 text-hyle-text/30">
                <span class="font-mono text-[10px] uppercase tracking-widest">Scroll / Swipe</span>
                <div class="w-12 h-px bg-current"></div>
            </div>
        </div>

        <!-- SCROLL CONTAINER -->
        <!-- 
             Логика скролла: 
             - overflow-x-auto: нативный свайп на мобилках.
             - JS перехватит колесо мыши для десктопа.
        -->
        <div 
            id="horizontal-showcase" 
            class="flex gap-6 md:gap-10 overflow-x-auto pb-12 pt-4 px-4 -mx-4 snap-x snap-mandatory cursor-ew-resize scrollbar-hide"
            style="scrollbar-width: none; -ms-overflow-style: none;"
        >
            {recentProducts.map((product) => {
                const catId = (product.data.category && typeof product.data.category === 'object') 
                    ? product.data.category.id 
                    : product.data.category;
                
                return (
                    <div class="shrink-0 w-[80vw] md:w-[420px] snap-center transition-transform duration-500 hover:-translate-y-2 select-none">
                         <ProductCard 
                            product={product} 
                            categoryName={catId ? categoryMap[catId] : ''} 
                        />
                    </div>
                );
            })}
            
            <!-- "See All" Card -->
            <a href="/catalog" class="shrink-0 w-[40vw] md:w-[300px] snap-center flex flex-col justify-center items-center bg-hyle-stone/10 rounded-sm border border-hyle-text/5 hover:bg-hyle-stone/20 transition-colors group cursor-pointer">
                <span class="font-serif text-3xl text-hyle-text/40 group-hover:text-hyle-clay transition-colors mb-2">→</span>
                <span class="font-mono text-xs uppercase tracking-widest text-hyle-text/60">Все изделия</span>
            </a>
            
            <!-- Spacer -->
            <div class="w-12 shrink-0"></div>
        </div>

    </div>
  </section>

  <!-- SECTION 3: PHILOSOPHY (Dark) -->
  <section class="bg-[#1F1E1C] text-[#F9F8F6] py-24 md:py-40 relative overflow-hidden">
      <!-- Decor -->
      <div class="absolute top-0 right-0 w-[600px] h-[600px] bg-hyle-clay/5 rounded-full blur-[120px] pointer-events-none"></div>

      <div class="container-main relative z-10 grid grid-cols-1 lg:grid-cols-2 gap-16 lg:gap-32 items-center">
          
          <!-- Image (Fixed: No filters) -->
          <div class="relative order-2 lg:order-1">
              <div class="relative z-10 aspect-[4/5] overflow-hidden rounded-sm w-full shadow-2xl border border-white/5">
                  <img 
                    src={WORKSHOP_IMAGE} 
                    alt="Process" 
                    class="w-full h-full object-cover transition-transform duration-1000 hover:scale-105"
                    onerror="this.src='https://images.unsplash.com/photo-1493106641515-6b5631de4bb9?q=80&w=1000&auto=format&fit=crop'"
                  />
              </div>
          </div>

          <!-- Text -->
          <div class="order-1 lg:order-2">
              <span class="font-mono text-[10px] uppercase tracking-[0.2em] text-hyle-clay mb-8 block">Философия</span>
              <h2 class="font-serif text-4xl md:text-7xl mb-10 leading-[0.9]">
                  Красота в <br/> <span class="italic text-white/40">несовершенстве.</span>
              </h2>
              <div class="space-y-6 text-white/50 font-light text-lg leading-relaxed max-w-md border-l border-white/10 pl-6">
                  <p>
                      Мы не прячем следы рук. Не зашлифовываем случайные линии. 
                      Каждая трещинка глазури — это история обжига.
                  </p>
              </div>
              
              <div class="mt-12">
                  <a href="/about" class="font-mono text-xs uppercase tracking-widest border-b border-white/30 pb-1 hover:border-hyle-clay hover:text-hyle-clay transition-colors">
                      О нашей мастерской
                  </a>
              </div>
          </div>
      </div>
  </section>

  <!-- FOOTER -->
  <footer class="bg-[#242321] py-20 border-t border-white/5 text-[#F9F8F6]">
      <div class="container-main flex flex-col items-center text-center">
          <span class="font-serif text-3xl md:text-4xl block mb-2 opacity-80">Hyle.</span>
          <p class="font-mono text-[10px] uppercase tracking-widest text-white/30 mb-10">Moscow • Est 2026</p>
          
          <nav class="flex flex-wrap justify-center gap-8 md:gap-16 text-xs uppercase tracking-[0.2em] text-white/50 mb-12">
              <a href="/catalog" class="hover:text-hyle-clay transition-colors">Каталог</a>
              <a href="/blog" class="hover:text-hyle-clay transition-colors">Блог</a>
              <a href="/about" class="hover:text-hyle-clay transition-colors">О нас</a>
              <a href="https://t.me/username" target="_blank" class="hover:text-hyle-clay transition-colors text-white/80">Telegram</a>
          </nav>

          <p class="font-hand text-2xl text-hyle-clay/60">
              Сделано руками.
          </p>
      </div>
  </footer>

</Layout>

<script>
  // 1. BACKGROUND PARALLAX
  document.addEventListener('scroll', () => {
      const scrolled = window.pageYOffset;
      const elements = document.querySelectorAll('.parallax-element');
      elements.forEach((el) => {
          const speed = el.getAttribute('data-speed') || 0.1;
          // @ts-ignore
          el.style.transform = `translateY(${scrolled * speed}px)`;
      });
  });

  // 2. HERO MOUSE PARALLAX
  const heroSection = document.querySelector('section');
  const heroImage = document.getElementById('hero-img-parallax');

  if (heroSection && heroImage) {
    heroSection.addEventListener('mousemove', (e) => {
      if (window.matchMedia("(min-width: 1024px)").matches) {
        // @ts-ignore
        const { clientX, clientY } = e;
        const { innerWidth, innerHeight } = window;
        const moveX = (clientX / innerWidth - 0.5) * 20; 
        const moveY = (clientY / innerHeight - 0.5) * 20;
        heroImage.style.transform = `translate(${-moveX}px, ${-moveY}px) scale(1.1)`;
      }
    });
  }

  // 3. HORIZONTAL SCROLL ON WHEEL
  const showcase = document.getElementById('horizontal-showcase');
  
  if (showcase) {
      showcase.addEventListener('wheel', (evt) => {
          // Проверяем, есть ли куда скроллить
          const maxScroll = showcase.scrollWidth - showcase.clientWidth;
          
          if (maxScroll > 0) {
              const atStart = showcase.scrollLeft <= 0;
              const atEnd = showcase.scrollLeft >= maxScroll - 1;

              // Если скроллим ВНИЗ и мы НЕ в конце -> скроллим ВПРАВО
              if (evt.deltaY > 0 && !atEnd) {
                  evt.preventDefault();
                  showcase.scrollLeft += evt.deltaY;
              } 
              // Если скроллим ВВЕРХ и мы НЕ в начале -> скроллим ВЛЕВО
              else if (evt.deltaY < 0 && !atStart) {
                  evt.preventDefault();
                  showcase.scrollLeft += evt.deltaY;
              }
              // Иначе позволяем вертикальный скролл страницы
          }
      }, { passive: false });
  }
</script>