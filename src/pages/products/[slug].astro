---
// src/pages/products/[slug].astro
import { getCollection, getEntry, getEntries } from 'astro:content';
import Layout from '../../layouts/Layout.astro';
import ExpandableText from '../../components/ExpandableText.astro';
import OrderButton from '../../components/OrderButton.astro';
import ProductCard from '../../components/ProductCard.astro';

export async function getStaticPaths() {
  const products = await getCollection('products');
  return products.map(entry => ({
    params: { slug: entry.slug },
    props: { entry },
  }));
}

const { entry } = Astro.props;
const { title, price, images, specs, status, masterNote, care_instructions, category, tags } = entry.data;
const { Content } = await entry.render();

// --- 1. УНИВЕРСАЛЬНЫЙ РЕЗОЛВЕР (Helper) ---
// Принимает: строку ID, объект-ссылку или null
// Возвращает: объект { id, title } или null
async function resolveData(ref: any, collectionName: 'categories' | 'tags') {
    if (!ref) return null;

    let id: string | null = null;
    let title: string | null = null;
    let entryData = null;

    try {
        // Случай А: Это новая ссылка (объект)
        if (typeof ref === 'object' && ref.collection) {
            id = ref.id || ref.slug; // Astro использует id, Keystatic иногда slug
            entryData = await getEntry(ref);
        }
        // Случай Б: Это старая строка (ID)
        else if (typeof ref === 'string') {
            id = ref;
            // Пробуем найти в коллекции по ID
            entryData = await getEntry(collectionName, ref);
        }

        // Если нашли запись в базе -> берем красивый Title
        if (entryData && entryData.data) {
            title = entryData.data.title; // ВАЖНО: поле называется title
        } else {
            // Если записи нет (старый тег без справочника) -> используем ID как Title
            title = typeof ref === 'string' ? ref : id;
            // Делаем первую букву заглавной для красоты
            if (title) title = title.charAt(0).toUpperCase() + title.slice(1);
        }

    } catch (e) {
        // Самый крайний случай - возвращаем что есть
        id = typeof ref === 'string' ? ref : null;
        title = id;
    }

    return id ? { id, title } : null;
}

// --- 2. ПОДГОТОВКА ДАННЫХ ДЛЯ UI ---

// А. Категория (для хлебных крошек и Related)
const categoryData = await resolveData(category, 'categories');
const categoryTitle = categoryData ? categoryData.title : 'Каталог';
const currentCategoryId = categoryData ? categoryData.id : null;

// Б. Теги (для отображения под ценой)
const rawTags = Array.isArray(tags) ? tags : [];
// Резолвим все теги параллельно
const resolvedTags = await Promise.all(
    rawTags.map(tag => resolveData(tag, 'tags'))
);
// Чистим от null и берем первые 3
const displayTags = resolvedTags.filter(Boolean).slice(0, 3);


// --- 3. ПОХОЖИЕ ТОВАРЫ (SMART MATCHING) ---
const allProducts = await getCollection('products');

const relatedProducts = allProducts.filter(p => {
    if (p.id === entry.id) return false; // Не я сам
    
    // Нам не нужно делать запрос в базу для каждого товара (дорого).
    // Достаточно сравнить ID.
    const pCatRaw = p.data.category;
    const pCatId = (typeof pCatRaw === 'object' && pCatRaw !== null) ? (pCatRaw.id || pCatRaw.slug) : pCatRaw;

    if (!currentCategoryId || !pCatId) return false;
    return pCatId === currentCategoryId;
}).slice(0, 6);

// Если мало похожих - добавляем новинки
let relatedItems = relatedProducts;
if (relatedItems.length < 4) {
    const leftovers = allProducts
        .filter(p => p.id !== entry.id && !relatedItems.some(r => r.id === p.id))
        .slice(0, 6 - relatedItems.length);
    relatedItems = [...relatedItems, ...leftovers];
}

// Загружаем маппинг категорий для карточек Related Products (чтобы там тоже были русские названия)
const allCategories = await getCollection('categories');
const categoryMap = allCategories.reduce((acc, cat) => {
    acc[cat.id] = cat.data.title; // ВАЖНО: title
    return acc;
}, {} as Record<string, string>);

const formattedPrice = price > 0 ? `${price.toLocaleString('ru-RU')} ₽` : 'Цена по запросу';
const s = status?.toLowerCase() || '';
const isSoldOut = s === 'sold' || s === 'продано';
const mainImage = images && images.length > 0 ? images[0] : '/placeholder.jpg';
const noteText = masterNote || "Особенность этой серии — в несовершенстве формы. Следы пальцев оставлены намеренно.";
const currentUrl = Astro.url.href;

const specMap: Record<string, string> = {
    'size': 'Размер', 'volume': 'Объем', 'material': 'Материал',
    'weight': 'Вес', 'color': 'Цвет', 'technique': 'Техника'
};
---

<Layout title={title} hideHeader={true}>
  
  <div class="min-h-screen w-full overflow-hidden flex flex-col lg:flex-row bg-[#FDFCF8]">
    
    <!-- LEFT -->
    <div class="relative w-full lg:w-[70%] h-[60vh] lg:h-screen lg:sticky lg:top-0 bg-hyle-stone/10 flex flex-col justify-center overflow-hidden">
        <a href="/" class="absolute top-6 left-6 lg:top-8 lg:left-8 z-30 font-serif text-xl lg:text-2xl tracking-wide opacity-80 hover:opacity-100 mix-blend-multiply text-hyle-text">Hyle.</a>
        
        <div class="absolute top-14 left-6 lg:top-8 lg:left-32 z-20 flex items-center gap-2 pt-1 font-hand text-lg lg:text-2xl text-hyle-text/50">
             <a href="/catalog" class="hover:text-hyle-clay transition-colors">Каталог</a>
             
             {categoryData && (
                <>
                    <span class="text-hyle-text/30">/</span>
                    <a href={`/catalog?categories=${categoryData.id}`} class="text-hyle-clay -rotate-1 hover:text-hyle-text transition-colors">
                        {categoryData.title}
                    </a>
                </>
             )}
             
             <span class="text-hyle-text/30">/</span>
             <span class="text-hyle-clay truncate max-w-[200px] cursor-default">{title}</span>
        </div>

        <div class="zoom-container relative w-full h-[50vh] lg:h-[85vh] flex items-center justify-center cursor-zoom-in group">
             <img src={mainImage} alt={title} id="main-product-image" class="max-w-full max-h-full object-contain transition-transform duration-300 ease-out origin-center drop-shadow-xl" />
             <div class="lg:hidden absolute bottom-4 right-4 bg-white/80 backdrop-blur px-3 py-1 text-[10px] uppercase tracking-widest text-hyle-text/60 rounded-full pointer-events-none">Tap to zoom</div>
        </div>
        
        {/* Thumbs logic skipped for brevity */}
    </div>

    <!-- RIGHT -->
    <div class="w-full lg:w-[30%] min-h-[50vh] bg-white/80 border-l border-hyle-text/5 flex flex-col relative z-10 backdrop-blur-xl shadow-2xl shadow-hyle-text/5">
        <div class="flex-1 p-6 lg:p-12 flex flex-col gap-6 lg:gap-8">
            <div class="mt-0 lg:mt-4">
                <div class="flex justify-between items-start mb-2">
                    <div class="flex-1 pr-4">
                        <ExpandableText maxHeight="80px" gradientFrom="from-white/80">
                            <h1 class="font-serif text-3xl lg:text-5xl text-hyle-text leading-[1.1] break-words hyphens-auto">{title}</h1>
                        </ExpandableText>
                    </div>
                    {isSoldOut && <span class="text-[10px] border border-hyle-text/20 px-2 py-1 uppercase tracking-widest opacity-50 mt-1 shrink-0">Архив</span>}
                </div>
                
                <div class="flex flex-col gap-2 mt-4 lg:mt-6 border-b border-hyle-text/5 pb-6">
                    <span class="font-hand text-3xl md:text-4xl lg:text-5xl text-hyle-clay -rotate-2 inline-block origin-left">{formattedPrice}</span>
                    {!isSoldOut && status !== 'В наличии' && (
                        <span class="text-xs text-hyle-text/40 uppercase tracking-widest mt-1">{status}</span>
                    )}
                    
                    {/* DISPLAY RESOLVED TAGS */}
                    {displayTags.length > 0 && (
                        <div class="flex flex-wrap gap-3 mt-2">
                            {displayTags.map((tag) => (
                                <a href={`/catalog?tag=${tag.id}`} class="text-base lg:text-lg font-hand text-hyle-text/50 hover:text-hyle-clay transition-colors -rotate-2 hover:rotate-0">
                                    #{tag.title}
                                </a>
                            ))}
                        </div>
                    )}
                </div>
            </div>

            <div class="bg-[#F6F5F1] p-5 lg:p-6 rounded-sm -rotate-1 shadow-sm border border-hyle-stone/50 relative mx-1">
                 <div class="absolute -top-3 left-1/2 w-3 h-3 rounded-full bg-hyle-text/10 shadow-inner"></div>
                 <ExpandableText maxHeight="120px" gradientFrom="from-[#F6F5F1]">
                    <p class="font-hand text-xl lg:text-2xl text-hyle-text/80 leading-snug">"{noteText}"</p>
                 </ExpandableText>
            </div>

            <ExpandableText maxHeight="140px" gradientFrom="from-white/80">
                <div class="prose prose-sm prose-stone font-light leading-relaxed text-hyle-text/80 text-justify">
                    <Content />
                </div>
            </ExpandableText>

            <div class="border-t border-hyle-text/10 pt-4 lg:pt-6">
                {specs && (
                    <dl class="text-xs grid grid-cols-2 gap-y-3 opacity-70 mb-4">
                        {Object.entries(specs).map(([key, value]) => (
                            <>
                                <dt class="font-medium uppercase tracking-wider text-hyle-text/60">
                                    {specMap[key.toLowerCase()] || key}
                                </dt>
                                <dd>{value}</dd>
                            </>
                        ))}
                    </dl>
                )}
                {/* Care instructions... */}
            </div>

            <div class="mt-2">
                 {isSoldOut ? (
                    <button disabled class="w-full py-4 bg-neutral-100 text-neutral-400 font-serif italic cursor-not-allowed text-center text-xs uppercase tracking-widest">Изделие нашло свой дом</button>
                ) : (
                    <OrderButton productName={title} price={price} url={currentUrl} />
                )}
            </div>

            <div class="mt-8 lg:mt-auto pt-8 border-t border-hyle-text/5 pb-8 lg:pb-0">
                <div class="flex justify-between items-baseline mb-4">
                    <h3 class="font-hand text-xl lg:text-2xl text-hyle-text/60">Вам может понравиться:</h3>
                    <span class="text-[9px] uppercase tracking-widest text-hyle-text/30 hidden sm:block animate-pulse">Листайте →</span>
                </div>
                <div id="related-slider" class="flex gap-5 overflow-x-auto pb-6 snap-x snap-mandatory scrollbar-hide select-none scroll-smooth">
                    {relatedItems.map((item) => {
                         // Простая нормализация ID для карточки (там свой резолвер)
                         const cRaw = item.data.category;
                         const cId = (typeof cRaw === 'object' && cRaw !== null) ? (cRaw.id || cRaw.slug) : cRaw;
                         
                         return (
                            <div class="shrink-0 w-44 md:w-52 snap-start pointer-events-auto">
                                <ProductCard 
                                    product={item} 
                                    categoryName={cId ? categoryMap[cId] : ''} 
                                />
                            </div>
                        );
                    })}
                </div>
            </div>
        </div>
    </div>
  </div>
</Layout>
