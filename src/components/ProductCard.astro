---
// src/components/ProductCard.astro
import type { CollectionEntry } from 'astro:content';
import { getEntries } from 'astro:content';

interface Props {
  product: CollectionEntry<'products'>;
  categoryName?: string;
}

const { product } = Astro.props;
const { title, price, images, status, tags } = product.data;

const mainImage = images && images.length > 0 ? images[0] : '/images/placeholder.jpg';
const formattedPrice = price > 0 ? `${price.toLocaleString('ru-RU')} ₽` : 'По запросу';

const s = status?.toLowerCase() || '';
const isSold = s === 'sold' || s === 'продано';
const isReserved = s === 'reserved' || s === 'резерв';

// --- ГИБРИДНАЯ ЛОГИКА ТЕГОВ ---
let visibleTags = [];
const rawTags = Array.isArray(tags) ? tags : [];

// 1. Отделяем строки (Legacy) и объекты (Refs)
const stringTags = rawTags.filter(t => typeof t === 'string' && t.trim() !== '');
const refTags = rawTags.filter(t => typeof t === 'object' && t !== null);

// 2. Загружаем Refs
let loadedRefs = [];
if (refTags.length > 0) {
    try {
        loadedRefs = await getEntries(refTags);
    } catch (e) {
        console.warn(`Card Tag error for ${product.slug}`, e);
    }
}

// 3. Создаем заглушки для строк, чтобы формат был единым { id, data: { title } }
const normalizedStrings = stringTags.map(str => ({ 
    id: str, 
    data: { title: str } 
}));

// 4. Объединяем (Сначала загруженные, потом строки, или наоборот - неважно)
visibleTags = [...normalizedStrings, ...loadedRefs];

// Берем первый тег для отображения
const displayTag = visibleTags.length > 0 ? visibleTags[0] : null;

const productUrl = `/products/${product.slug}`;
---

<div class="group relative w-full flex flex-col">
  
  <!-- 1. ИЗОБРАЖЕНИЕ -->
  <a href={productUrl} class="block relative overflow-hidden aspect-square bg-neutral-100 rounded-sm mb-3 cursor-pointer">
    {(isSold || isReserved) && (
      <div class="absolute top-2 left-2 z-30">
        <span class="text-[9px] font-sans font-medium uppercase tracking-[0.2em] text-hyle-text px-2 py-1 bg-white/90 backdrop-blur-md border border-hyle-text/10 shadow-sm">
           {isSold ? 'Продано' : 'Резерв'}
        </span>
      </div>
    )}
    
    <img 
      src={mainImage} 
      alt={title} 
      loading="lazy"
      class={`w-full h-full object-cover object-center transition-transform duration-[1.2s] ease-out-expo group-hover:scale-105 z-10 relative ${isSold ? 'grayscale opacity-90' : ''}`}
    />
  </a>

  <!-- 2. ИНФОРМАЦИЯ -->
  <div class="flex justify-between items-start px-1 mt-auto">
    
    <div class="pr-2 flex flex-col items-start w-full min-w-0 relative">
        <!-- Title Link -->
        <a href={productUrl} class="block mb-0.5 w-full">
            <h3 class="font-serif text-base md:text-lg leading-normal text-hyle-text transition-colors duration-300 group-hover:text-hyle-clay line-clamp-2 pb-1.5 -mb-1.5">
              {title}
            </h3>
        </a>
        
        <!-- TAG RENDER -->
        {displayTag && (
            <a 
                href={`/catalog?tag=${displayTag.id}`}
                class="inline-block text-[11px] md:text-[13px] font-hand text-hyle-text/60 -rotate-1 mt-0 hover:text-hyle-clay transition-all z-10 relative"
            >
                #{displayTag.data.title}
            </a>
        )}
    </div>
    
    <div class="flex flex-col items-end shrink-0 pl-1">
        <span class="font-hand text-lg md:text-2xl text-hyle-clay font-medium whitespace-nowrap -rotate-2 group-hover:rotate-0 transition-transform origin-center">
          {formattedPrice}
        </span>
    </div>

  </div>
</div>